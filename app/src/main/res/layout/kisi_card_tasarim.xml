<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/LinearLayoutSearch"
    android:padding="7dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_arama"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_arama"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon"
                android:transitionName="profilImage"
                app:civ_border_color="@color/purple_500"
                app:civ_border_width="2dp"/>
            <!-- app:civ_border_width="1dp"
             app:civ_border_color="?attr/colorAccent"-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aramaAdsoyad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Levent YADIRGA"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:transitionName="adsoyad" />

                <TextView
                    android:id="@+id/aramaKullaniciadi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lyadirga"
                    android:textColor="@color/cardview_dark_background"
                    android:transitionName="kullaniciadi" />

                <TextView
                    android:id="@+id/aramaMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lyadirga@gmail.com"
                    android:transitionName="mail"
                   />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>